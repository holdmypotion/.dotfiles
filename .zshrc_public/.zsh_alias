function dn() {
    cd ~/personal/vault/journal/ || exit
    if ! [ -f $(date +%h_%d).md ]; then
	echo "\
# Work
1. [ ]

# Work+
1. [ ]

# Business
1. [ ]
" > $(date +%h_%d).md
    fi
    vim $(date +%h_%d).md
}

